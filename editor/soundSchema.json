{
    "type": "object",
    "properties": {
        "uid": {
            "type": "string",
            "default": "sound-0"
        },
        "type": {
            "type": "string",
            "enum": [
                "stereo",
                "3d",
                "ambisonic"
            ]
        },
        "source": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string",
                    "default": "assets/"
                }
            }
        },
        "options": {
            "type": "object",
            "properties": {
                "volume": {
                    "type": "number",
                    "default": "1"
                },
                "autoPlay": {
                    "type": "boolean",
                    "format": "checkbox",
                    "default": true
                },
                "loop": {
                    "type": "boolean",
                    "format": "checkbox",
                    "default": false
                } 
            }
        }
    }
}