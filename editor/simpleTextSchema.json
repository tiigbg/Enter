{
    "type": "object",
    "options": {
        "multiple_editor_select_via_property": {
            "property": "engine",
            "value": "org.forgejs.simpletext"
        }
    },
    "headerTemplate": "{{self.uid}}",
    "properties": {
        "uid": {
            "type": "string",
            "default": "simpletext-0"
        },
        "engine": {
            "type": "string",
            "default": "org.forgejs.simpletext"
        },
        "keep": {
            "options": {
                "hidden": true
            },
            "type": "boolean",
            "format": "checkbox",
            "description": "Should the plugin instance be removed on scene switch?",
            "default": false
        },
        "options": {
            "type": "object",
            "properties": {
                "horizontalCenter": {
                    "type": "boolean",
                    "format": "checkbox",
                    "default": true
                },
                "verticalCenter": {
                    "type": "boolean",
                    "format": "checkbox",
                    "default": true
                },
                "top": {
                    "type": "number",
                    "default": null
                },
                "right": {
                    "type": "number",
                    "default": null
                },
                "bottom": {
                    "type": "number",
                    "default": null
                },
                "left": {
                    "type": "number",
                    "default": null
                },
                "config": {
                    "type": "object",
                    "properties": {
                        "i18n": {
                            "type": "boolean",
                            "format": "checkbox",
                            "default": false
                        },
                        "value": {
                            "type": "string",
                            "default": ""
                        },
                        "fontSize": {
                            "type": "string",
                            "default": "5vmin"  
                        },
                        "fontFamily": {
                            "type": "string",
                            "enum": [
                                "futura-pt, sans-serif",
                                "Open Sans",
                                "Arial, Helvetica, sans-serif",
                                "'Arial Black', Gadget, sans-serif",
                                "Impact, Charcoal, sans-serif",
                                "'Courier New', Courier, monospace",
                                "Georgia, serif",
                                "'Times New Roman', Times, serif"
                            ],
                            "default": "futura-pt, sans-serif"
                        },
                        "fontStyle": {
                            "type": "string",
                            "default":  "normal"
                        },
                        "fontWeight": {
                            "type": "number",
                            "default": 700
                        },
                        "color": {
                            "type": "string",
                            "format": "color",
                            "default": "black"
                        },
                        "textAlign": {
                            "type": "string",
                            "enum": [
                                "center",
                                "left",
                                "right"
                            ]
                        }
                    }
                }
            }
        }
    }
}