{
    "type": "object",
    "options": {
        "multiple_editor_select_via_property": {
            "property": "engine",
            "value": "se.ri.cameraview"
        }
    },
    "headerTemplate": "{{self.uid}}",
    "properties": {
        "uid": {
            "type": "string",
            "default": "cameraview-0"
        },
        "engine": {
            "type": "string",
            "default": "se.ri.cameraview"
        },
        "enabled": {
            "options": {
                "hidden": true
            },
            "type": "boolean",
            "format": "checkbox",
            "default": true
        },
        "keep": {
            "options": {
                "hidden": true
            },
            "type": "boolean",
            "format": "checkbox",
            "description": "Should the plugin instance be removed on scene switch?",
            "default": false
        },
        "options": {
            "type": "object",
            "properties": {
                "facing": {
                    "type": "string",
                    "enum": [
                        "back",
                        "front"
                    ]
                },
                "delay": {
                    "type": "number",
                    "default": 0
                }
            }
        }
    }
}